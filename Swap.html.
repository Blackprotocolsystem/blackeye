        // Script Animasi Log
        const log = document.getElementById('log-content');
        setInterval(() => {
            const hash = Math.random().toString(16).substring(2, 6).toUpperCase();
            log.innerHTML += `> Syncing block_${hash}... OK<br>`;
            if(log.childNodes.length > 8) log.removeChild(log.firstChild);
            document.getElementById('tps-val').innerText = (Math.random() * 5 + 30).toFixed(1);
        }, 3000);
